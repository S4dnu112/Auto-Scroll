{
    "manifest_version": 3,
    "name": "Smart Auto-Scroll",
    "version": "1.0",
    "description": "The simplest Auto-Scroll. Customizable toggle key, scroll type (step, continuous), and speed",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Auto-Scroll Settings"
    },
    "icons": {
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ]
}