{
    "manifest_version": 3,
    "name": "Auto-Scroll",
    "version": "1.0",
    "description": "The simplest Auto-Scroll. Customizable toggle key, scroll type (step, continuous), and speed",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Auto-Scroll Settings"
    },
    "icons": {
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "commands": {
        "toggle-scroll": {
            "suggested_key": {
                "default": "Alt+J",
                "mac": "Alt+J"
            },
            "description": "Toggle auto-scroll"
        }
    }
}